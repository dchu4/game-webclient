var isAlive = function(userOrNpc){
  var arrayLength = this.length;
  var totalHp = 0;
  var unitsAlive = true;

  if(userOrNpc == "enemy"){
    for(var i = 0; i < arrayLength; i++){
      if(this[i].isNpc){
        totalHp += this[i].hp;
      }
    }
  }

  if(userOrNpc == "user"){
    for(var i = 0; i < arrayLength; i++){
      if(!this[i].isNpc){
        totalHp += this[i].hp;
      }
    }
  }

  if(totalHp < 1){
    unitsAlive = false;
  }

  return unitsAlive;
}


